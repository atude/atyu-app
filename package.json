{
  "name": "atyu",
  "description": "OLED configurator for QMK keyboards",
  "version": "0.3.1ß",
  "author": {
    "name": "atude"
  },
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.2",
    "@mui/styled-engine-sc": "^5.8.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/shelljs": "^0.8.11",
    "canvas": "^2.9.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.2",
    "gif-frames": "./src/packages/gif-frames",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "shelljs": "^0.8.5",
    "web-vitals": "^2.1.0",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "eslint-config-prettier": "^8.5.0",
    "node": "^18.5.0",
    "prettier": "^2.6.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.2",
    "wait-on": "^6.0.1"
  },
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "dev": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "pack": "electron-builder --dir",
    "builddist": "yarn build && yarn dist",
    "dist": "electron-builder",
		"builddistall": "yarn build && electron-builder -mw"
  },
  "build": {
    "appId": "com.atude.atyu",
    "productName": "Atyu",
    "copyright": "Copyright © 2021 Mozamel Anwary (atude)",
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
